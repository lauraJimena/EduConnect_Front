@model List<EduConnect_Front.Dtos.ComentarioTutorDto>

@{
    ViewData["Title"] = "Comentarios de Tutor";
    Layout = "_LayoutUsuario";
}

@section Styles {
    <link rel="stylesheet" href="~/estilos/comentariosTutor.css" />
}

<main class="comentarios-container">
    <h1>🗣️ Mis Comentarios</h1>

    <section class="filtros">
        <form asp-action="ComentariosTutorFiltrar" method="post">
            @Html.AntiForgeryToken()
            <label for="calificacion">Calificación:</label>
            <select id="calificacion" name="calificacion">
                <option value="">Todas</option>
                <option value="5">⭐⭐⭐⭐⭐ (5)</option>
                <option value="4">⭐⭐⭐⭐ (4)</option>
                <option value="3">⭐⭐⭐ (3)</option>
                <option value="2">⭐⭐ (2)</option>
                <option value="1">⭐ (1)</option>
            </select>

            <label for="ordenFecha">Ordenar por:</label>
            <select id="ordenFecha" name="ordenFecha">
                <option value="1">Más recientes</option>
                <option value="2">Más antiguos</option>
            </select>

            <button type="submit" class="btn-filtrar">🔍 Filtrar</button>
            <a asp-action="ComentariosTutor" class="btn-limpiar">🔄 Limpiar</a>
        </form>
    </section>

    <section class="lista-comentarios">
        @if (Model != null && Model.Any())
        {
            foreach (var c in Model)
            {
                <div class="comentario-card">
                    <div class="comentario-header">
                        <strong>@c.Usuario</strong>
                        <span>@c.FechaFormateada</span>
                    </div>
                    <div class="comentario-texto">@c.Descripcion</div>
                    <div class="comentario-calificacion">
                        @for (int i = 0; i < c.Calificacion; i++)
                        {
                            <span class="estrella">⭐</span>
                        }
                    </div>
                </div>
            }
        }
        else
        {
            <p class="sin-comentarios">No hay comentarios disponibles.</p>
        }
    </section>
    <a asp-controller="Tutor" asp-action="PanelTutor" class="btn-volver">VOLVER</a>
</main>
